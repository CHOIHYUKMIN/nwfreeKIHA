{
  "name": "pwa-poc-server",
  "version": "1.0.0",
  "description": "PWA POC 서버 - SQLite 데이터베이스와 동기화 API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "frontend": "http-server -p 3000 -o",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend\"",
    "tunnel": "lt --port 3000 --subdomain nwfreepilot",
    "init-mssql": "node init-mssql.js",
    "init-sqlite": "node init-db.js",
    "init-health-checkup": "node init-health-checkup.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "mssql": "^10.0.1"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "pwa",
    "sqlite",
    "indexeddb",
    "offline",
    "sync"
  ],
  "author": "PWA POC Team",
  "license": "MIT"
}
